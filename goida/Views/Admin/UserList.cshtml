@model IEnumerable<goida.Models.User>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<div class="container mx-auto mt-10 px-4">
    <h2 class="text-3xl font-bold mb-6 text-center">User List</h2>
    
    <table class="min-w-full bg-gray-800 rounded-lg overflow-hidden shadow-lg">
        <thead>
        <tr class="bg-gray-700 text-gray-100">
            <th class="py-2 px-4 text-left">ID</th>
            <th class="py-2 px-4 text-left">Nickname</th>
            <th class="py-2 px-4 text-left">Role</th>
            <th class="py-2 px-4 text-left">Registration Date</th>
            <th class="py-2 px-4 text-left">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr class="border-t border-gray-700">
                <td class="py-2 px-4">@user.Id</td>
                <td class="py-2 px-4">@user.Nickname</td>
                <td class="py-2 px-4">
                    <form method="post" asp-action="ChangeRole" class="flex space-x-2">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="newRole" class="bg-gray-700 text-gray-100 rounded-lg px-2 py-1">
                            <option value="member" selected="@((user.Role == "member") ? "selected" : null)">Member</option>
                            <option value="admin" selected="@((user.Role == "admin") ? "selected" : null)">Admin</option>
                        </select>
                        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-1 rounded-lg transition duration-300">Change</button>
                    </form>
                </td>
                <td class="py-2 px-4">@user.RegistrationDate.ToString("dd/MM/yyyy")</td>
            </tr>
        }
        </tbody>
    </table>
</div>
