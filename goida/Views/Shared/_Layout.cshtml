<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - goida</title>
    <script src="https://cdn.tailwindcss.com"></script> <!-- Подключаем Tailwind -->
</head>
<body class="bg-gray-900 text-blue-400 min-h-screen">

<header>
    <nav class="bg-gray-900 border-b border-blue-600 shadow-md">
        <div class="container mx-auto flex items-center justify-between py-4 px-4">
            <a class="text-2xl font-bold text-blue-400 hover:text-blue-500" asp-area="" asp-controller="Home" asp-action="Index">goida</a>
            <button class="md:hidden text-blue-400 focus:outline-none" id="navbar-toggle">
                <svg class="w-6 h-6 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M4 5h16M4 11h16M4 17h16" />
                </svg>
            </button>
            <div class="hidden md:flex md:items-center w-full md:w-auto" id="navbarNav">
                <ul class="flex flex-col md:flex-row md:space-x-4 text-lg">
                    <li><a class="text-blue-400 hover:text-blue-500" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="text-blue-400 hover:text-blue-500" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    <li><a class="text-blue-400 hover:text-blue-500" asp-area="" asp-controller="Chat" asp-action="Index">Chat</a></li>
                    <li><a class="text-blue-400 hover:text-blue-500" asp-area="" asp-controller="GitStats" asp-action="Index">GitStats</a></li>
                    <li><a class="text-blue-400 hover:text-blue-500" asp-area="" asp-controller="Home" asp-action="tododoList">tododoList</a></li>
                </ul>
                @if (Context.Session.GetString("UserName") != null)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post" class="ml-4">
                        <button type="submit" class="bg-transparent border border-blue-400 text-blue-400 hover:bg-blue-400 hover:text-white py-2 px-4 rounded">
                            Exit
                        </button>
                    </form>
                }
            </div>
        </div>
    </nav>
</header>

<div class="container mx-auto px-4">
    <main role="main" class="py-6">
        @RenderBody()
    </main>
</div>

<script>
    document.getElementById('navbar-toggle').addEventListener('click', function () {
        const nav = document.getElementById('navbarNav');
        nav.classList.toggle('hidden');
    });
</script>

@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
