@model goida.Models.User

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>


<div class="w-full max-w-md mx-auto bg-gray-800 p-8 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold mb-6 text-center">Register</h2>
    
    <form method="post" asp-action="Register" class="space-y-4">
        <div>
            <label asp-for="Nickname" class="block mb-1 font-medium">Nickname</label>
            <input type="text" asp-for="Nickname" class="w-full px-4 py-2 rounded-lg bg-gray-700 text-gray-100 focus:ring-2 focus:ring-blue-500 focus:outline-none" required />
            <span asp-validation-for="Nickname" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Password" class="block mb-1 font-medium">Password</label>
            <input type="password" asp-for="Password" class="w-full px-4 py-2 rounded-lg bg-gray-700 text-gray-100 focus:ring-2 focus:ring-blue-500 focus:outline-none" required />
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg transition duration-300">Register</button>
    </form>

    <div class="mt-6 text-center">
        <p>Already have an account? <a href="/Account/Login" class="text-blue-400 hover:underline">Login here</a></p>
    </div>
</div>
