@{
    Layout = "_Layout";
    int commitCount = ViewData["CommitCount"] != null ? (int)ViewData["CommitCount"] : 0;
    int lineCount = ViewData["LineCount"] != null ? (int)ViewData["LineCount"] : 0;
    var commits = ViewData["Commits"] as List<goida.Models.GitHubService.Commit>;
}
<head>
    <title>GitHub Repository Stats</title>
</head>
<div>
    <h1>GitHub Repository Statistics</h1>
    <p>Total Commits: <span id="commitCount">@commitCount</span></p>
    <p>Total Lines of Code: ~<span id="lineCount">@lineCount</span></p>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/goida.styles.css" asp-append-version="true" />
    
    <h2>Commit History</h2>
    @if (commits != null && commits.Count > 0)
    {
        <table>
            <thead>
            <tr>
                <th>Author</th>
                <th>Message</th>
                <th>Date</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var commit in commits)
            {
                <tr>
                    <td>@commit.Author</td>
                    <td>@(commit.Message.Length > 50 ? commit.Message.Substring(0, 50) + "..." : commit.Message)</td>
                    <td>@commit.Date.AddHours(3).ToString("dd MMM HH:mm")</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No commits found.</p>
    }
</div>

